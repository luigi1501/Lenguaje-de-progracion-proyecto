    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="shortcut icon" href="../images/logo2.jpg" type="image/x-icon">

</head>
</head>

<body>
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
          <div class="col-md-3 mb-2 mb-md-0">
            <a href="/tabGeneral" class="btn btn-primary">Volver a la Tabla General</a>
          </div>
    
          <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li class="nav-link px-2 link-secons
            dary">Alimentos del Alba - Admin</li>
          </ul>
    
          <div class="col-md-3 text-end">
            <a href="/" class="btn btn-primary">Salir</a>
          </div>
        </header>
      </div>

    <h1>Agregando Personal de Alimentos del Alba</h1>

    <form action="/guardarEmpleado" method="post">
        <label for="usuario">Usuario del Empleado</label>
        <input type="text" name="usuario" placeholder="Usuario del Empleado">

        <label for="nombre">Nombre del Empleado</label>
        <input type="text" name="nombre" placeholder="Nombre del Empleado" required>

        <label for="apellido">Apellido del Empleado</label>
        <input type="text" name="apellido" placeholder="Apellido del Empleado" required>

        <label for="cedula">Cédula del Empleado</label>
        <input type="number" name="cedula" placeholder="Cédula del Empleado" required>

        <label for="cargo">Cargo del Empleado</label>
        <input type="text" name="cargo" placeholder="Cargo del Empleado" required>

        <label for="departamento">Departamento Al Que Pertenece</label>
        <input type="text" name="departamento" placeholder="Departamento Al Que Pertenece" required>

        <label for="telefono">Número de Teléfono del Empleado</label>
        <input type="number" name="telefono" placeholder="Número de Teléfono del Empleado" required>

        <label for="correo">Correo Electrónico del Empleado</label>
        <input type="email" name="correo" placeholder="Correo Electrónico del Empleado" required>

        <input type="submit" value="Guardar Empleado" class="btn btn-dark">
    </form>

</body>
</html>